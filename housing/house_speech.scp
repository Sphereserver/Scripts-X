VERSION=X1

[SPEECH spk_house_cmds]
ON=lock this*
	ref1 = <region.uid>
	if !(<ref1.isowner <src>> || <ref1.GetCoownerPos <src>> >= 0 || <ref1.GetFriendPos <src>> >= 0 || <src.isgm>)
		return 0
	else
		src.targetf f_house_item_lock
		src.message @,,1 What do you wish to lockdown?
		return 1
	endif

