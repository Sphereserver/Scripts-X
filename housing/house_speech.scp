	else
		targetf, f_release
		src.message @,,1 What do you wish to release?
		return 1
	endif

ON=bank*
	if <def.hs_can_bank>
		ref1 = <region.uid>
		if !(<ref1.isowner <src>> || <ref1.GetCoownerPos <src>> >= 0 || <ref1.GetFriendPos <src>> >= 0 || <src.isgm>)
			return 0
		else
			src.bankself
			src.sysmessage @,,1 You have <bankbalance> gold in your Bank Box.
			return 1
		endif
	endif

